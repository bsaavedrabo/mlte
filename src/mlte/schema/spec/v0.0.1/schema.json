{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Specification",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "description": "The version identifier for the schema."
        },
        "metadata": {
            "type": "object",
            "properties": {
                "model_identifier": {
                    "type": "string",
                    "description": "The model identifier string."
                },
                "model_version": {
                    "type": "string",
                    "description": "The model version string."
                },
                "timestamp": {
                    "type": "integer",
                    "description": "The timestamp at which the report was generated (seconds since epoch)."
                }
            },
            "additionalProperties": false
        },        
        "properties": {
            "type": "array",
            "description": "The collection of properties of which the specification is composed.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The identifier for the property." 
                    },
                    "repr": {
                        "type": "string",
                        "description": "The representation required to reproduce the property."
                    },
                    "description": {
                        "type": "string",
                        "description": "The property description."
                    },
                    "requirements": {
                        "type": "array",
                        "description": "The set of measurement requirements.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "identifier": {
                                    "type": "string",
                                    "description": "The name of the requirement."
                                },
                                "condition": {
                                    "type": "object",
                                    "description": "The condition to validate this requirement.",
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "description": "A description of what the condition is validating.."
                                        },
                                        "arguments": {
                                            "type": "array",
                                            "description": "The arguments needed for the validation of the condition, usually thresholds.",
                                            "items": {
                                                "type": ["number","string","boolean","object","array", "null"]
                                            }
                                        },
                                        "callback": {
                                            "type": "string",
                                            "description": "The dill-encoded thunk to call when validating a value for this condition."
                                        }                                                                                                                        
                                    }                                    
                                },                                
                                "measurement_type": {
                                    "type": "string",
                                    "description": "The type of the measurement."
                                },                                
                                "validator": {
                                    "type": "string",
                                    "description": "The validator method to use on a result from this measurement to validate it."
                                },
                                "threshold": {
                                    "type": ["number","string","boolean","object","array", "null"],
                                    "description": "Validation parameter."
                                }
                            }
                        }
                    }                    
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["schema_version"]
}