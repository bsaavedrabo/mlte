{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Specification Report",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "description": "The version identifier for the schema."
        },
        "metadata": {
            "type": "object",
            "properties": {
                "model_identifier": {
                    "type": "string",
                    "description": "The model identifier string."
                },
                "model_version": {
                    "type": "string",
                    "description": "The model version string."
                },
                "timestamp": {
                    "type": "integer",
                    "description": "The timestamp at which the report was generated (seconds since epoch)."
                }
            },
            "additionalProperties": false
        },
        "properties": {
            "type": "array",
            "description": "The set of properties that compose the specification.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the property."
                    },
                    "description": {
                        "type": "string",
                        "description": "The description of the property."
                    },
                    "requirements": {
                        "type": "array",
                        "description": "The set of measurement requirements.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "type": "string",
                                    "description": "The name of the requirement."
                                },
                                "measurement_type": {
                                    "type": "string",
                                    "description": "The type of the measurement."
                                },                                
                                "validator": {
                                    "type": "string",
                                    "description": "The validator method to use on a result from this measurement to validate it."
                                },
                                "threshold": {
                                    "type": ["number","string","boolean","object","array", "null"],
                                    "description": "Validation parameter."
                                },
                                "validation": {
                                    "type": "object",
                                    "description": "The validation result.",
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "description": "The name of the validator."
                                        },
                                        "result": {
                                            "type": "string",
                                            "description": "The text describing the result of validation."
                                        },
                                        "message": {
                                            "type": "string",
                                            "description": "The text elaborating on the validation result."
                                        }
                                    }
                                }                                
                            }
                        }             
                    }
                }
            }
             
        }
    },
    "additionalProperties": false,
    "required": ["schema_version", "metadata", "properties"]
}