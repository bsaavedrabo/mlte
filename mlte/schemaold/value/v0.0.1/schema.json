{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Value",
    "properties": {
        "schema_version": {
            "type": "string",
            "description": "The version identifier for the schema."
        },
        "metadata": {
            "type": "object",
            "properties": {
                "measurement": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "type": "string",
                            "description": "The name that identifies the identifier."
                        },                        
                        "typename": {
                            "type": "string",
                            "description": "The typename identifier for the producing measurement."
                        }
                    }
                },
                "value": {
                    "type": "object",
                    "properties": {
                        "typename": {
                            "type": "string",
                            "description": "The typename identifier for the value itself."
                        }
                    }
                }
            }
        },
        "payload": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "additionalProperties": false,
    "required": [
        "schema_version"
    ]
}